};

const chart4: Chart = {
  values: [24, 21, 69, 45, 53, 56, 35, 18, 32, 28],
};

function calculateValues(chart: Chart) {
  if (chart.values[9] < chartHeight / 2) {
    chart.color = "var(--error)";
    chart.doingBad = true;
  } else {
    chart.color = "var(--accent)";
    chart.doingBad = false;
  }
  chart.id = chart.values.reduce((acc, currentValue) => {
    return `${acc}${String(currentValue)}`;
  }, "");
}

calculateValues(chart1);
calculateValues(chart2);
calculateValues(chart3);
calculateValues(chart4);
