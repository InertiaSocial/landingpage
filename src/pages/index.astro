---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import InterestForm from "../components/InterestForm.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import img from "../images/274.jpg";
---

<Layout title="Inertia">
  <main>
    <Logo />
    <div class="denverCtaWrapper">
      <a class="denverCta" href="/ethdenver">Here from Denver?</a>
    </div> 
    <div id="tagline" class="textBlock">
      <span>
        Join and Discover <span class="text-gradient">Collective Insight</span> â€”
        coming soon.
      </span>
    </div>
    <div class="textBlock hidden" id="thankYou">
      <span>
        <b><Icon name="ph:confetti-bold" style="transform: translateY(2px)"/> Thanks for your interest!</b> We'll be in touch soon.
      </span>
    </div>
    <div class="form">
      <InterestForm showPreSeedInvestorForm />
    </div>
    <div class="cover">
      <Image draggable="false" alt="" src={img} quality="high" />
    </div>
  </main>
</Layout>

<style lang="stylus">
body
    background-color #0d0c07
    transition all 0.2s ease-in-out

main
    display flex
    flex-direction column
    align-items center
    justify-content center

.denverCtaWrapper
  display flex
  justify-content center
  align-items center 
  margin-top 3rem

  .denverCta
    font-size 3rem
    color #f8f6f2
    text-decoration none
    text-align center
    transition all 0.2s ease-in-out

    &:hover
      color #a3c9a8
      transform scale(1.1)
</style>
