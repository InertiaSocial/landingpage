---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import InterestForm from "../components/InterestForm.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import img from "../images/274.jpg";
---

<Layout title="Belief">
  <main>
    <Logo />
    <div id="tagline" class="textBlock">
      <span>
        Bet on <span class="text-gradient">news, culture, and more</span> â€”
        coming soon.
      </span>
    </div>
    <div class="textBlock hidden" id="thankYou">
      <span>
        <b><Icon name="ph:confetti-bold" style="transform: translateY(2px)"/> Thanks for your interest!</b> We'll be in touch soon.
      </span>
    </div>
    <div class="form">
      <InterestForm />
    </div>
    <div class="cover">
      <Image draggable="false" alt="" src={img} quality="high" />
    </div>
  </main>
</Layout>

<style lang="stylus">
body
    background-color #0d0c07
    transition all 0.2s ease-in-out

main
    display flex
    flex-direction column
    align-items center
    justify-content center
</style>
